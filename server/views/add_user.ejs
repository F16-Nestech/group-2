<!--include header-->
<%- include('include/_header') %>
    <!--/include header-->

    <div class="card-create">
        <div class="card-header-create bg-info">
            <h3 class="card-title">
                Thêm mới User
            </h3>
        </div>
        <div class="card-body-create">
            <form method="POST" id="update_user">
                <div class="row mb-3">
                    <label for="inputName" class="col-sm-10 col-form-label"><b>Name</b></label>
                    <div class="col-sm-5">
                        <input type="text" name="name" class="form-control" id="inputName" placeholder="Nguyen Van A">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Email" class="col-sm-10 col-form-label"><b>Email</b></label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" name="email" value="" id="inputEmail"
                            placeholder="example@gmail.com">
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0"><b>Gender</b></legend>
                    <div class="col-sm-11">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" value="Male">
                            <label class="form-check-label" for="gender">
                                Male
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" value="Female">
                            <label class="form-check-label" for="gender">
                                Female
                            </label>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0"><b>Decentralization</b></legend>
                    <div class="col-sm-11">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="dezAdmin" value="option1"
                                checked>
                            <label class="form-check-label" for="gridRadios1">
                                Admin
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="dezUser" value="option2">
                            <label class="form-check-label" for="gridRadios2">
                                User
                            </label>
                        </div>
                    </div>
                </fieldset>
                <button type="submit" class="btn btn-primary">Thêm Mới</button>
            </form>
        </div>
    </div>

    <!--include footer-->
    <%- include('include/_footer') %>
        <!--/include footer-->